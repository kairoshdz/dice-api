<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- Tell IIS to handle requests using iisnode (the Node.js bridge) -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <!-- Don't rewrite requests for static files that actually exist -->
        <rule name="StaticContent" stopProcessing="true">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" />
          </conditions>
          <action type="None" />
        </rule>

        <!-- Route everything else to server.js -->
        <rule name="DynamicContent">
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Disable directory browsing (the permission error you're seeing) -->
    <directoryBrowse enabled="false" />

    <security>
      <requestFiltering>
        <hiddenSegments>
          <add segment="node_modules" />
        </hiddenSegments>
      </requestFiltering>
    </security>

  </system.webServer>
</configuration>
